{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "strict": "off",
    "no-alert": "error",
    "no-console": "error",
    "no-unused-vars": "warn",
    "comma-dangle": "off",
    "capitalized-comments": "off",
    "template-tag-spacing": "off"
  },
  "env": {
    "node": true,
    "amd": true
  },
  "globals": {
    "Promise": true,
    "test": true
  }
}